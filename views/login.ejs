<%- include('../views/partials/header') %>
<body>
    <div class="container">
        <form class="form" id="user-login">
            <h1 class="title-form">Login</h1>
            <div class="display-message display-error"></div>
            <div class="form-content-group">
                <input type="text" class="form-content" autofocus placeholder="Enter Username or email" style="height: 2rem; width: 20rem">
                <div class="form-content-error"></div>
            </div>
            <div class="form-content-group">
                <input type="password" class="form-content" autofocus placeholder="Enter Password" style="height: 2rem; width: 20rem">
                <div class="form-content-error"></div>
            </div>
            <button class="login-btn" type="submit" >Login</button>
        </form>
    </div>
</body>
