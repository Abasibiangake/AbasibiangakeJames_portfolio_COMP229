<!DOCTYPE html>
<html lang="en">
<head>
  <title>AJ Business Contact List</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel="stylesheet" href="../public/stylesheets/style.css"/>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" 
  integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
  <style>
      @import url('https://fonts.googleapis.com/css?family=Poppins:400,500,700');    /* Remove the navbar's default margin-bottom and rounded borders */ 
    html {
      position: relative;
      min-height: 100%;
    }
    .navbar {
      margin-bottom: 0;
      border-radius: 0;
      background-color: rgb(107, 36, 36); /*rgba(252, 177, 86, 0.726);*/
      font-family: Poppins, sans-serif;
    }

    body {
      background:-webkit-linear-gradient(rgba(255, 0, 0, 0.381),pink); /*url(/public/images/background-one.jpg); */
      /*rgb(193, 108, 108);rgba(206, 145, 71, 0.726);rgba(252, 177, 86, 0.726);*/
      padding: 2px;
      font-family: Poppins, sans-serif;
      font-size: 1.5rem;
        color: black;
        text-align: center;
        min-height: 100%;   
    } 
    .main-footer{
    /* margin-top: 6rem; */
    background-color: rgb(107, 36, 36);
    font-weight: bold;
    padding: 5px;
    align-items: center;
    bottom: 0;
    width: 100%;
    
    /* Set the fixed height of the footer here */
    height: 60px;
    position: absolute;
  }

     .container{
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 40px;
        flex-grow: 1;
    } 
    .social-link{
         width: 1em;
      margin-right: 2rem;
      margin-left: 2rem;
      color: white;
      font-size:smaller;
      /* margin-top: 40px; */
    }
    .social-link:hover{
      color: black;
  }
    .fab{
        width: 1em;
      margin-right: .5rem; 
           
    }
  .footer-nav{
    align-content: center;
    justify-content: center;
  }
    .accent-text{
        /* font-family:cursive; */
        font-weight:bolder;
        font-size: 2rem;
        color: rgb(107, 36, 36);
    }
  </style>
</head>

<body>
    <%- include ../partials/header.ejs %>
        <!-- <%= UserList %> -->

        <!-- Main Content -->
        <main class="container">
            <div class="row">
                <h1><%= title %></h1>
                <br>
                <div>
                    <a href="/user/add" class="btn btn-primary align-self-end" role="button">
                        <i class="fas fa-plus-circle"></i> 
                        Add a new User
                    </a>                
                </div>

                <div class="table-responsive">
                    <table class="table table-bordered table-striped table-hover">
                        <!-- Header Row-->
                        <tr>
                            <th class="text-center">Username</th>
                            <th class="text-center">Password</th>
                            <th class="text-center">Email Address</th>
                            <th class="text-center" colspan="2">Actions</th>
                        </tr>

                        <!-- Repeatable Template Row -->

                        <% for(let i = 0; i < UserList.length; i++) { %>
                            <tr>
                                <td class="text-center"><%= UserList[i].username %></td>
                                <td class="text-center"><%= UserList[i].password %></td>
                                <td class="text-center"><%= UserList[i].email %></td>
                                <td class="text-center">
                                    <a href="/user/edit/<%= UserList[i]._id %>" class="btn btn-primary btn-sm">
                                    <i class="fas fa-pencil-alt"></i></a>
                                </td>
                                <td class="text-center">
                                    <a href="/user/delete/<%= UserList[i]._id %>" class="btn btn-danger btn-sm">
                                    <i class="fas fa-trash-alt"></i></a>
                                </td>
                            </tr>
                        <% } %>
                    </table>
                </div>
            </div>
        </main>
    <%- include ../partials/footer.ejs %>
</body>
</html>
